<h6>Dashboard</h6>
<h3>Welcome {{ name }}</h3>
<p>Here are your journal entries:</p>

{{#if stories}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th>Title</th>
                <th></th>
            </tr>
        </thead>
    </table>
    <tbody>
        {{#each stories}}
        <tr>
            <td><a href="/stories/{{_id}}"></a>{{title}}</td>
            <td>{{createdAt}}</td>
            <td><span class="dash-status">{{status}}</span></td>
            <td></td>
        </tr>
        {{/each}}
    </tbody>
{{else}}
<p>You have not created any stories yet!</p>
{{/if}}